.add_activity_area{ margin:0 auto; width:60%; }

.add_activity_area h3 {
    font-size: 24px;
    width:100%;
    height:30px; 
    margin-bottom:20px;
    text-align:center;
}

.add_activity_area .form-control {
    background-color: #fff;
    border: 1px solid #c2cad8;
    border-radius: 4px;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
    height: 40px;
    margin-bottom: 15px;
    padding: 6px 12px;
    transition: border-color 0.15s ease-in-out 0s, box-shadow 0.15s ease-in-out 0s;
    width: 100%;
    float:left
}

.add_activity_area .btn.default:not(.btn-outline) {
    background-color: #e1e5ec;
    border-color: #e1e5ec;
    color: #666;
    border-right: 1px solid #c2cad8;
    border-top: 1px solid #c2cad8;
    border-bottom: 1px solid #c2cad8;
}
.add_activity_area .btn:not(.btn-sm):not(.btn-lg) {
    line-height: 26px;
}

.add_activity_area .input-group {
    border-collapse: separate;
    display: inline-block;
    width: 100%;
}

